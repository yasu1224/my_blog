<div class='content__title'>
  新規記事の作成
</div>

<%= form_with model: @post, class: :form, local: true do |form| %>
  <%= form.text_field :title, placeholder: :タイトル, class: :form__title %>
  <%= form.label :img %>
  <%= form.file_field :img, class: :form__image %>
  <%= form.hidden_field :content, placeholder: :ブログ本文, id: :form__text %>
  <trix-editor input = "form__text" ></trix-editor>
  <%= form.submit '投稿する', class: :form__btn %>
<% end %>
